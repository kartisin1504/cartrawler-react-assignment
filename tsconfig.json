{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "jest",
      "node"
    ],
    "baseUrl": "src"
  },
  "include": [
    "src",
    "__tests__"
  ]
}